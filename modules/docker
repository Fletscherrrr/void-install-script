title=docker
description="- Installs and enables Docker"
status=off

main() {
    commandFailure="Installing Docker has failed."
    echo -e "Installing Docker... \n"
    xbps-install -Sy -R $installRepo -r /mnt docker || failureCheck
    echo -e "Docker installed. \n"

    commandFailure="Enabling Docker service has failed."
    echo -e "Enabling Docker service... \n"
    chroot /mnt /bin/bash -c "ln -s /etc/sv/docker /var/service" || failureCheck
    echo -e "Docker service enabled. \n"

    return 0
}